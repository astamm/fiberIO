all:
	${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe \
	-e "utils::untar('VTK-8.2.0.tar.gz')";
	mkdir -p vtk_build;
	mkdir -p ../inst;
	cmake -DBUILD_SHARED_LIBS=OFF -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=../inst -S VTK-8.2.0 -B build_tmp
	cd vtk_build && make clean && make -j`${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe -e "writeLines(as.character(parallel::detectCores(logical = FALSE)))"` && make install;
	rm -fr VTK-8.2.0;
	rm -fr vtk_build;
