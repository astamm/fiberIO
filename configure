#! /bin/sh

RSCRIPT_BIN=${R_HOME}/bin/Rscript
R_BIN=${R_HOME}/bin/R
CMAKE_BIN=`which cmake`

cd src

sh ./scripts/vtk_download.sh ${RSCRIPT_BIN} ${R_BIN}
sh ./scripts/vtk_build.sh ${CMAKE_BIN}
NCORES=`${RSCRIPT_BIN} -e "cat(parallel::detectCores(logical = FALSE))"`
sh ./scripts/vtk_install.sh ${CMAKE_BIN} ${NCORES}
sh ./scripts/generate_makevars.sh "PKG_LIBS = \$(LAPACK_LIBS) \$(BLAS_LIBS) \$(FLIBS) -Lvtk/lib -lvtk_all"
